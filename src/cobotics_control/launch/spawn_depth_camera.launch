<launch>
    <arg name="camera_ns" default="depth_camera"/>
    <arg name="x" default="0.037912"/>
    <arg name="y" default="1.166655"/>
    <arg name="z" default="1.763950"/>
    <arg name="R" default="0.0"/>
    <arg name="P" default="0.25"/>
    <arg name="Y" default="-1.691686"/>

    <param name="~camera_description" command="rosrun xacro xacro '$(find cobotics_control)/urdf/depth_camera/depth_camera.xacro'"/>
    <node name="camera_spawn_$(arg camera_ns)" pkg="gazebo_ros" type="spawn_model" args="-urdf -param '~camera_description' 
        -model           '$(arg camera_ns)'
        -b
        -robot_namespace '$(arg camera_ns)' 
        -x '$(arg x)' -y '$(arg y)' -z '$(arg z)' 
        -R '$(arg R)' -P '$(arg P)' -Y '$(arg Y)'"/>
</launch>
